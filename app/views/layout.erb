  <title>VinTracker</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="stylesheet" href="/stylesheets/main.css" />
<link href="https://fonts.googleapis.com/css?family=Inconsolata:700|Lobster|Nunito:600|Roboto+Slab:700" rel="stylesheet"></head>
<body>
  <div class="wrapper">

    <nav>
          <% if is_logged_in? %>

            <button><a href="/wines/new"> Enter a New Wine </a></button>
            <button><a href="/logout"> Sign-Out </a></button>
            <button><a href="/users/<%=current_user.id %>"> Edit-Profile </a></button>
            <button><a href="/wines"> Show all Wines </a></button>
            <br>


          <%end %>

        </nav>
        <% if flash.has?(:message) %>
          <p><%= flash[:message] %></p>
        <% end %>

      <%= yield %>

    <footer class="branding">
      <small>&copy; 2018 <strong>VinTracker</strong></small>
    </footer>
  </div>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
